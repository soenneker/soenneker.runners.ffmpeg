<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFrameworks>net8.0</TargetFrameworks>
        <Nullable>enable</Nullable>
        <Platforms>AnyCPU</Platforms>
        <NoWarn>$(NoWarn);1591</NoWarn>
    </PropertyGroup>

    <PropertyGroup>
        <Description>Automatically updates the Soenneker.Libraries.FFmpeg package</Description>
        <Version Condition="'$(BUILD_VERSION)' == ''">2.5.0</Version>
        <Version Condition="'$(BUILD_VERSION)' != ''">$(BUILD_VERSION)</Version>
        <AssemblyName>Soenneker.Runners.FFmpeg</AssemblyName>
        <PackageId>Soenneker.Runners.FFmpeg</PackageId>
        <PackageTags>runners ffmpeg ffmpegrunner c# .net csharp dotnet</PackageTags>
        <Copyright>Copyright Â© 2023-2024 Jake Soenneker</Copyright>
        <Authors>Jake Soenneker</Authors>
        <Company>https://soenneker.com</Company>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <IsPackable>false</IsPackable>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/soenneker/soenneker.runners.ffmpeg</PackageProjectUrl>
        <RepositoryUrl>https://github.com/soenneker/soenneker.runners.ffmpeg</RepositoryUrl>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <LangVersion>latest</LangVersion>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageIcon>icon.png</PackageIcon>
    </PropertyGroup>
    
    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\" />
        <None Include="..\LICENSE" Pack="true" PackagePath="\" />
        <None Include="..\icon.png" Pack="true" PackagePath="\" />
    </ItemGroup>

    
    <ItemGroup>
        <PackageReference Include="SharpCompress" Version="0.38.0" />
        <PackageReference Include="Soenneker.Extensions.LoggerConfiguration" Version="2.1.522" />
        <PackageReference Include="Soenneker.Git.Util" Version="2.1.1500" />
        <PackageReference Include="Soenneker.Utils.Dotnet" Version="2.1.1111" />
        <PackageReference Include="Soenneker.Utils.Dotnet.NuGet" Version="2.1.919" />
        <PackageReference Include="Soenneker.Utils.Environment" Version="2.1.306" />
        <PackageReference Include="Soenneker.Utils.FileSync" Version="2.1.840" />
        <PackageReference Include="Soenneker.Utils.HttpClientCache" Version="2.1.782" />
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
        <PackageReference Include="Serilog.Extensions.Hosting" Version="8.0.0" />
        <PackageReference Include="Serilog.Extensions.Logging" Version="8.0.0" />
        <PackageReference Include="Soenneker.Extensions.Configuration" Version="2.1.420" />
        <PackageReference Include="Soenneker.Utils.File" Version="2.1.1023" />
        <PackageReference Include="Soenneker.Utils.SHA3" Version="2.1.728" />
    </ItemGroup>
</Project>
